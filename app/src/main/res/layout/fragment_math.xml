<LinearLayout
    android:id="@+id/someID"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueDark"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".MainActivity">

    <ProgressBar
        android:id="@+id/uiProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:max="10"
        android:progress="5"/>


    <Button
        android:id="@+id/nextQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector"
        android:text="NEXT"
        android:textColor="@color/lilacBright"
        android:textSize="30dp"
        />

    <include layout="@layout/space_auto_vertical"/>

    <TextView
        android:id="@+id/first_digit"
        style="@style/mathFragment"
        tools:text="213"

        />


    <TextView
        style="@style/mathFragment"
        android:text="+"/>

    <TextView
        android:id="@+id/second_digit"
        style="@style/mathFragment"
        tools:text="714"
        />

    <TextView
        style="@style/mathFragment"
        android:text="="/>

    <EditText

        android:id="@+id/answer"
        style="@style/mathFragment"
        android:cursorVisible="false"
        android:gravity="center"
        android:hint="Answer"
        android:inputType="number"
        android:maxLength="6"

        />

    <include layout="@layout/space_auto_vertical"/>

    <Button
        android:id="@+id/answerQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector"
        android:text="CHECK"
        android:textColor="@color/lilacBright"
        android:textSize="30dp"
        />

</LinearLayout>
