<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/dialog_completed"
                android:padding="20dp"

    >


    <TextView
        android:id="@+id/textView"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Test complete!\nTake another?"
        android:textColor="@color/yellowBright"
        android:textSize="25dp"

        />


    <Button
        android:id="@+id/nextQuestionzz"
        style="@style/testCompletedDialogButton"
        android:layout_below="@id/textView"
        android:layout_alignLeft="@id/textView"
        android:text="YES"


        />

    <Button
        android:id="@+id/nextQuestionzzzz"
        style="@style/testCompletedDialogButton"
        android:layout_alignRight="@id/textView"
        android:layout_below="@id/textView"
        android:text="NO"


        />

</RelativeLayout>