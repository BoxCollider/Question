<resources>

    <!--Colors for text and text hint-->
    <color name="apTextColor" >#FFFFE55B</color>
    <color name="apTextHintColor" >#55FFE55B</color>
    <color name="appBackgroundColor" >#FF130F4C</color>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.NoActionBar">
        <item name="android:textColor">@color/apTextColor</item>
        <item name="android:textColorHint">@color/apTextHintColor</item>
    </style>

<!--  style for math fragment. Dimensions vary by orientation  -->
    <style name="mathFragment">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/mathHeight</item>
    </style>

</resources>
