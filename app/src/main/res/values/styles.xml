<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.NoActionBar">

    </style>

    <!--  style for math fragment text elements. Dimensions vary by orientation  -->
    <style name="mathFragment_textElements">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/mathFragment_textSize</item>
        <item name="android:textColor">@color/yellowBright</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <!--  style for math fragment buttons. Dimensions vary by orientation  -->
    <style name="mathFragment_button">
        <item name="android:layout_width">@dimen/mathFragment_buttonWidth</item>
        <item name="android:layout_height">@dimen/mathFragment_buttonHeight</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textColor">@color/lilacBright</item>
        <item name="android:textSize">@dimen/mathFragment_buttonTextSize</item>
    </style>



    <!--  style for test completed dialog buttons. Dimensions vary by orientation  -->
    <style name="testCompletedDialogButton">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textColor">@color/lilacBright</item>
        <item name="android:textSize">18dp</item>
    </style>

</resources>
